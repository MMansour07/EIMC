                                        @Html.TextBoxFor(model => model.issuer.id, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Type</label>
                                        @Html.TextBoxFor(model => model.issuer.type, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Name</label>
                                        @Html.TextBoxFor(model => model.issuer.name, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label>Branch Address</label>
                                        @Html.TextAreaFor(model => model.IssuerFullAddress, new { @class = "form-control", @readonly = "readonly", @row = "8" })
                                    </div>
