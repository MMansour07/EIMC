@model eInvoicing.DTO.GetDocumentResponse
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
<div class="container">
    <div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
        <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">

                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">
                        @Model.typeName | @Model.uuid
                    </h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">
                                Documents
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">
                                Sent
                            </a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <div class="card card-custom">
        <div class="card-header card-header-right ribbon ribbon-clip ribbon-left">
            <div class="ribbon-target" style="top: 12px;">
                <span class="ribbon-inner @Model.statusClass"></span>@Model.status
            </div>
            <h3 class="card-title">
                @Model.typeName  <code class="ml-1">@Model.typeVersionName</code>
            </h3>
        </div>
        <!--begin::Form-->
        <form>
            <div class="card-body">
                <div class="form-group row mb-0">
                    <label class="col-2 col-form-label">Internal Id:</label>
                    <label class="col-4 col-form-label">@Model.document.internalID</label>
                    <label class="col-2 col-form-label">ID:</label>
                    <label class="col-4 col-form-label">@Model.uuid</label>

                </div>
                <div class="form-group row mb-0">
                    <label class="col-2 col-form-label">Submission:</label>
                    <label class="col-4 col-form-label">@Model.submissionUUID</label>
                    <label class="col-2 col-form-label">Submission Date:</label>
                    <label class="col-4 col-form-label">@Model.dateTimeReceived</label>
                </div>
                <div class="form-group row mb-0">
                    <label class="col-2 col-form-label">Issuence Date:</label>
                    <label class="col-4 col-form-label">@Model.dateTimeIssued</label>
                </div>
            </div>
        </form>
    </div>

    <ul class="nav nav-tabs nav-tabs-line">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#kt_tab_pane_1">Summary</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#kt_tab_pane_2">More Details</a>
        </li>
    </ul>
    @if (Model.status.ToLower() == "invalid" && Model.validationResults != null)
    {
        <div class="card card-custom bg-light-danger mt-2">
            <div class="card-body text-red">
                <ul>
                    @foreach (var item in Model.validationResults.validationSteps.Where(i => i.Error != null)?.FirstOrDefault().Error.innerError.ToList())
                    {
                        <li>@item.error.</li>
                    }
                </ul>
            </div>
        </div>
    }
    <div class="tab-content mt-5" id="myTabContent">
        <div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel" aria-labelledby="kt_tab_pane_2">
            <div class="row">
                <div class="col-lg-6 draggable-zone">
                    <div class="card card-custom gutter-b draggable" data-card="true" id="kt_card_2">
                        <div class="card-header">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="flaticon2-user text-primary"></i>
                                </span>
                                <h3 class="card-label">Issuer (From)</h3>
                            </div>
                            <div class="card-toolbar">
                                <a href="#" class="btn btn-icon btn-sm btn-hover-light-primary mr-1" data-card-tool="toggle" data-toggle="tooltip" data-placement="top" title="" data-original-title="Toggle Card">
                                    <i class="ki ki-arrow-down icon-nm"></i>
                                </a>
                                <a href="#" class="btn btn-icon btn-sm btn-hover-light-primary draggable-handle">
                                    <i class="ki ki-menu "></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Registration Number</label>
                                        @Html.TextBoxFor(model => model.document.issuer.id, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Type</label>
                                        @Html.TextBoxFor(model => model.document.issuer.type, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Name</label>
                                        @Html.TextBoxFor(model => model.document.issuer.name, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label>Branch Address</label>
                                        @Html.TextAreaFor(model => model.document.issuer.address.buildingNumber, new { @class = "form-control", @readonly = "readonly", @row = "8" })
                                    </div>
                                    <div class="col-md-4">
                                        <label>Tax Activity Code</label>
                                        @Html.TextAreaFor(model => model.document.taxpayerActivityCode, new { @class = "form-control", @readonly = "readonly", @row = "8" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 draggable-zone">
                    <div class="card card-custom gutter-b draggable" data-card="true" id="kt_card_3">
