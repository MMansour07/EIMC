@model eInvoicing.DTO.RoleDTO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Roles</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Roles</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <div class="card-box mb-30">
            <div class="pd-20">
                <h6 class="text-blue h4">Delete - @Model.Name</h6>
            </div>
            <div class="pb-20">
                <div class="row ml-1">
                    <div class="col-md-6">
                        <h3 class="text-warning">Are you sure you want to delete this?</h3>
                    </div>
                </div>
                <div class="row ml-1">
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Role
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt>
                                Description
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>
                    </div>

                </div>
                <div class="row mt-2 ml-1">
                    <div class="col-md-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button class="btn btn-primary" type="submit">Delete</button>
                            <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("index", "role")'">BACK</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>