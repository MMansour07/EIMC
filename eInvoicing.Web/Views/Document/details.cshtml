                                        <label>Delivery Method</label>
                                        @Html.TextBoxFor(model => model.delivery.approach, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Packaging</label>
                                        @Html.TextBoxFor(model => model.delivery.packaging, new { @class = "form-control", @readonly = "readonly" })
