<script>
    jQuery(document).ready(function () {
        $("#btnsubmit").click(function (e) {
            KTApp.blockPage();
            var valdata = $("#_frm").serialize();
            //to get alert popup
            $.ajax({
                url: "/EInvoicing//v0/appsetting/update",
                type: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: valdata,
                success: function (response) {
                    KTApp.unblockPage();
                    if (!response) {
                        toastr.options = {
                            "closeButton": false,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": false,
                            "positionClass": "toast-top-center",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        };
                        toastr.error("Something went wrong!");
                    }
                    else {
                        toastr.options = {
                            "closeButton": false,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": false,
                            "positionClass": "toast-top-center",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "5000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        };
                        toastr.success("Data has been saved successfully!");
                    }
                }
            });
        });

        $('input[name=License]').change(function (ev) {
            if ($('input[name=License]')[0].files.length == 0) {
                $("#_import").css("display", "none");
            }
            else {
                $("#_import").css("display", "");
            }
        });
        $("#del").on("click", function () {
            $("#_import").css("display", "none");
            $('input[name=License]').val("");
        });

        $('.editBtn1').on('click', function (event) {
            event.preventDefault();

            if ($('.disable1').attr('readonly')) {
                $('.disable1').removeAttr('readonly');
                $('.disable1').removeClass('form-control-solid');

            } else {
                $('.disable1').attr('readonly', 'readonly');
                $('.disable1').addClass('form-control-solid');

            }
        });
        $('.editBtn2').on('click', function (event) {
            event.preventDefault();

            if ($('.disable2').attr('readonly')) {
                $('.disable2').removeAttr('readonly');
                $('.disable2').removeClass('form-control-solid');

            } else {
                $('.disable2').attr('readonly', 'readonly');
                $('.disable2').addClass('form-control-solid');

            }
        });
        $('.editBtn3').on('click', function (event) {
            event.preventDefault();

            if ($('.disable3').attr('readonly')) {
                $('.disable3').removeAttr('readonly');
                $('.disable3').removeClass('form-control-solid');

            } else {
                $('.disable3').attr('readonly', 'readonly');
                $('.disable3').addClass('form-control-solid');

            }
        });
        $('.editBtn11').on('click', function (event) {
            event.preventDefault();

            if ($('.disable11').attr('readonly')) {
                $('.disable11').removeAttr('readonly');
                $('.disable11').removeClass('form-control-solid');

            } else {
                $('.disable11').attr('readonly', 'readonly');
                $('.disable11').addClass('form-control-solid');

            }
        });
        $('.editBtn22').on('click', function (event) {
            event.preventDefault();

            if ($('.disable22').attr('readonly')) {
                $('.disable22').removeAttr('readonly');
                $('.disable22').removeClass('form-control-solid');

            } else {
                $('.disable22').attr('readonly', 'readonly');
                $('.disable22').addClass('form-control-solid');

            }
        });
        $('.editBtn33').on('click', function (event) {
            event.preventDefault();

            if ($('.disable33').attr('readonly')) {
                $('.disable33').removeAttr('readonly');
                $('.disable33').removeClass('form-control-solid');

            } else {
                $('.disable33').attr('readonly', 'readonly');
                $('.disable33').addClass('form-control-solid');

            }
        });
        KTBootstrapSwitch.init();
    });
    var KTBootstrapSwitch = function () {

        // Private functions
        var demos = function () {
            // minimum setup
            $('[data-switch=true]').bootstrapSwitch();
        };
        return {
            // public functions
            init: function () {
                demos();
            },
        };
    }();
</script>
