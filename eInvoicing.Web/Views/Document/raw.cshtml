                                    </div>
                                    <div class="col-md-6">
                                        <label>Purchase Order Description</label>
                                        @Html.TextBoxFor(model => model.document.purchaseOrderDescription, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
