@model eInvoicing.DTO.EditModelDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-65">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Card-->
            <div class="card card-custom gutter-b example example-compact">
                <div class="card-header bg-light">
                    <h3 class="card-title" style="float: left !important">
                        Editing |  <span class="ml-1" style="color: #0bb783 !important;"> @Model.UserName.ToLower()</span>
                    </h3>
                    <div class="card-toolbar">
                    </div>
                </div>
                <!--begin::Form-->
                <!--begin::Wizard Form-->
                @using (Html.BeginForm("edit", "user", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <!--begin::Group-->
                <div class="form-group row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                </div>
                <div class="form-group row">
                    <div class="col-lg-12 col-xl-9">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-solid form-control-lg", @placeholder = "First Name" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                    </div>
                </div>
                <!--end::Group-->
                <!--begin::Group-->
                <div class="form-group row">
                    <div class="col-lg-12 col-xl-9">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                    </div>
                </div>
                <!--end::Group-->
                <!--begin::Group-->
                <div class="form-group row">
                    <div class="col-lg-12 col-xl-9">
                        <div class="input-group input-group-solid input-group-lg">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Email", @type = "email" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--end::Group-->
                <!--begin::Group-->
                <div class="form-group row">
                    <div class="col-lg-12 col-xl-9">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Title" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12 col-xl-9">
                        <div class="input-group input-group-solid input-group-lg">
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Phone Number", @maxlength = "11"})

                        </div>
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*@if (Request.IsAuthenticated && User.IsInRole("SuperAdmin"))
                {*@
                    <div class="form-group row">
                        <div class="col-lg-12 col-xl-9">
                           
                            @Html.ListBoxFor(model => model.Roles, ViewBag.Roles as SelectList, new { @class = "form-control select2", @id = "kt_select2_3", @name = "param", @multiple = "multiple", @placeholder = "Roles" })
                            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                        </div>
                    </div>
                @*}*@
                    <!--end::Group-->
                </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">
                            اى حاجة
                        </button>
                        <button type="button" onclick="location.href='@Url.Action("index", "user")'" class="btn btn-secondary">
                            Cancel
                        </button>
                    </div>
                }
                <!--end::Form-->
            </div>
            <!--end::Card-->
        </div>
    </div>
</div>





