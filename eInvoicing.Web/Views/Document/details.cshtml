                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Bank Address</label>
                                        @Html.TextBoxFor(model => model.payment.bankAddress, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
