                                        <label>Proforma Invoice Number</label>
                                        @Html.TextBoxFor(model => model.document.proformaInvoiceNumber, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Card-->
                    <!--end::Example-->
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 draggable-zone">
                    <!--begin::Example-->
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b draggable" data-card="true" id="kt_card_6">
                        <div class="card-header">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="flaticon2-browser-1 text-primary"></i>
                                </span>
                                <h3 class="card-label">Payment</h3>
