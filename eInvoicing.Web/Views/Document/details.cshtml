                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Registration Number</label>
                                        @Html.TextBoxFor(model => model.receiver.id, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Type</label>
                                        @Html.TextBoxFor(model => model.receiver.type, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Name</label>
                                        @Html.TextBoxFor(model => model.receiver.name, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label>Address</label>
                                        @Html.TextAreaFor(model => model.ReceiverFullAddress, new { @class = "form-control", @readonly = "readonly", @row = "8" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 draggable-zone">
                    <!--begin::Example-->
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b draggable" data-card="true" id="kt_card_6">
