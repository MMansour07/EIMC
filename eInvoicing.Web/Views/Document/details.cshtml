                        <div class="card-body">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3 draggable-zone">
                                        <label>Purchase Order Reference</label>
                                        @Html.TextBoxFor(model => model.purchaseOrderReference, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Purchase Order Description</label>
                                        @Html.TextBoxFor(model => model.purchaseOrderDescription, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-3">
                                        <label>Internal ID:</label>
                                        @Html.TextBoxFor(model => model.internalID, new { @class = "form-control", @readonly = "readonly" })
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Sales Order Reference</label>
                                        @Html.TextBoxFor(model => model.salesOrderReference, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Sales Order Description</label>
                                        @Html.TextBoxFor(model => model.salesOrderDescription, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
