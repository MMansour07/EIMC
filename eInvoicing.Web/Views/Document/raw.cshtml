                                        <label>Swift Code</label>
                                        @Html.TextBoxFor(model => model.document.payment.swiftCode, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-3">
                                        <label>Bank Account IBAN</label>
                                        @Html.TextBoxFor(model => model.document.payment.bankAccountIBAN, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Bank Address</label>
                                        @Html.TextBoxFor(model => model.document.payment.bankAddress, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
