@model eInvoicing.Web.Models.RegisterViewModel
@using eInvoicing.Web.Views.User;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .select2-selection__rendered {
        width: 740px !important;
    }

    .select2-search__field {
        width: 740px !important;
    }
</style>
<div class="container-fluid">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
        <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">

                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h6 class="text-light font-weight-bold my-1 mr-5">
                        @UserResources.UsersLbl
                    </h6>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Master")" class="text-muted">
                                @UserResources.HomeLbl
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="javascript:window.location.reload();" class="text-muted">
                                @UserResources.UsersLbl
                            </a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
        <div class="topbar-item">
