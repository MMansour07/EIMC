        <div class="row">
            <div class="col-md-8">
                <div class="card card-custom gutter-b">
                    <div class="card-header bg-light">
                        <h6 class="card-title" style="float: left !important">
                            @Model.FirstName @Model.LastName | Profile
                        </h6>
                        <div class="card-toolbar">
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>First Name</label>
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Last Name</label>
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Email</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Username</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Title</label>
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <label>Phone Number</label>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control form-control-solid form-control-lg", @disabled = "true" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
