                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Registration Number</label>
                                        @Html.TextBoxFor(model => model.document.receiver.id, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Type</label>
                                        @Html.TextBoxFor(model => model.document.receiver.type, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
